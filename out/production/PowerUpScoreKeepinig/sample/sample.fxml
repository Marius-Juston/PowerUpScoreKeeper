<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<VBox xmlns:fx="http://javafx.com/fxml/1" alignment="CENTER" spacing="5.0"
  xmlns="http://javafx.com/javafx/8.0.121" fx:controller="sample.Controller">
  <Label text="Time: 00.00.00" fx:id="gameTime"/>
  <HBox alignment="CENTER" spacing="10.0">
    <VBox alignment="CENTER" spacing="20.0">
      <ToggleButton style="-fx-background-color: blue; -fx-text-fill: white;" mnemonicParsing="false"
        text="Force" fx:id="blueForce"/>
      <ToggleButton style="-fx-background-color: blue; -fx-text-fill: white;" layoutX="10.0" layoutY="10.0" mnemonicParsing="false"
        text="Boost" fx:id="blueBoost"/>
      <ToggleButton style="-fx-background-color: blue; -fx-text-fill: white;" layoutX="10.0" layoutY="49.0" mnemonicParsing="false"
        text="Levitate" fx:id="blueLevitate"/>
    </VBox>
    <HBox spacing="50.0">
      <children>
        <VBox alignment="CENTER" fx:id="blueSwitch">
          <Button mnemonicParsing="false" fx:id="blueSideSwitch1"/>
          <Button mnemonicParsing="false" text="Neutral" fx:id="blueNeutralSwitch"/>
          <Button mnemonicParsing="false" fx:id="blueSideSwitch2"/>
        </VBox>
        <VBox alignment="CENTER" fx:id="scale">
          <Button mnemonicParsing="false" fx:id="leverButton1"/>
          <Button mnemonicParsing="false" text="Neutral" fx:id="neutralLever"/>
          <Button mnemonicParsing="false" fx:id="leverButton2"/>
        </VBox>
        <VBox alignment="CENTER" fx:id="redSwitch">
          <Button mnemonicParsing="false" fx:id="redSideSwitch1"/>
          <Button mnemonicParsing="false" text="Neutral" fx:id="redNeutralSwitch"/>
          <Button mnemonicParsing="false" fx:id="redSideSwitch2"/>
        </VBox>
      </children>
    </HBox>
    <VBox alignment="CENTER" layoutX="10.0" layoutY="10.0" spacing="20.0">
      <ToggleButton style="-fx-background-color: red; -fx-text-fill: white;" mnemonicParsing="false"
        text="Force" fx:id="redForce"/>
      <ToggleButton style="-fx-background-color: red; -fx-text-fill: white;" layoutX="10.0" layoutY="10.0" mnemonicParsing="false"
        text="Boost" fx:id="redBoost"/>
      <ToggleButton style="-fx-background-color: red; -fx-text-fill: white;" layoutX="10.0" layoutY="49.0" mnemonicParsing="false"
        text="Levitate" fx:id="redLevitate"/>
    </VBox>
  </HBox>
  <HBox alignment="CENTER">
    <Label style="-fx-text-fill: blue;" layoutX="10.0" layoutY="10.0" text="Text"
      fx:id="bluePoints"/>
    <Region HBox.hgrow="ALWAYS"/>
    <Label style="-fx-text-fill: red;" layoutX="49.0" layoutY="10.0" text="Text" fx:id="redPoints"/>
    <padding>
      <Insets left="10.0" right="40.0"/>
    </padding>
  </HBox>
  <HBox alignment="CENTER" spacing="30.0">
    <children>
      <ToggleButton mnemonicParsing="false" text="Start" fx:id="gameToggleButton"/>
      <Button layoutX="240.0" layoutY="10.0" mnemonicParsing="false" text="Reset"
        fx:id="resetButton"/>
    </children>
  </HBox>
  <padding>
    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
  </padding>
</VBox>
