<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="5.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
  <Label fx:id="gameTime" text="Time: 00.00.00" />
  <HBox alignment="CENTER" spacing="10.0">
    <VBox alignment="CENTER" spacing="20.0">
      <ToggleButton fx:id="blueForce" mnemonicParsing="false" style="-fx-background-color: blue; -fx-text-fill: white;" text="Force" />
      <ToggleButton fx:id="blueBoost" layoutX="10.0" layoutY="10.0" mnemonicParsing="false" style="-fx-background-color: blue; -fx-text-fill: white;" text="Boost" />
      <ToggleButton fx:id="blueLevitate" layoutX="10.0" layoutY="49.0" mnemonicParsing="false" style="-fx-background-color: blue; -fx-text-fill: white;" text="Levitate" />
    </VBox>
      <HBox spacing="50.0">
         <children>
         <VBox fx:id="blueSwitch" alignment="CENTER">
           <Button fx:id="blueSideSwitch1" mnemonicParsing="false" />
           <Button fx:id="blueNeutralSwitch" mnemonicParsing="false" text="Neutral" />
           <Button fx:id="blueSideSwitch2" mnemonicParsing="false" />
         </VBox>
         <VBox fx:id="scale" alignment="CENTER">
           <Button fx:id="leverButton1" mnemonicParsing="false" />
           <Button fx:id="neutralLever" mnemonicParsing="false" text="Neutral" />
           <Button fx:id="leverButton2" mnemonicParsing="false" />
         </VBox>
         <VBox fx:id="redSwitch" alignment="CENTER">
           <Button fx:id="redSideSwitch1" mnemonicParsing="false" />
           <Button fx:id="redNeutralSwitch" mnemonicParsing="false" text="Neutral" />
           <Button fx:id="redSideSwitch2" mnemonicParsing="false" />
         </VBox>
         </children>
      </HBox>
    <VBox alignment="CENTER" layoutX="10.0" layoutY="10.0" spacing="20.0">
      <ToggleButton fx:id="redForce" mnemonicParsing="false" style="-fx-background-color: red; -fx-text-fill: white;" text="Force" />
      <ToggleButton fx:id="redBoost" layoutX="10.0" layoutY="10.0" mnemonicParsing="false" style="-fx-background-color: red; -fx-text-fill: white;" text="Boost" />
      <ToggleButton fx:id="redLevitate" layoutX="10.0" layoutY="49.0" mnemonicParsing="false" style="-fx-background-color: red; -fx-text-fill: white;" text="Levitate" />
    </VBox>
  </HBox>
  <HBox alignment="CENTER">
    <Label fx:id="bluePoints" layoutX="10.0" layoutY="10.0" text="Text" />
    <Region HBox.hgrow="ALWAYS" />
    <Label fx:id="redPoints" layoutX="49.0" layoutY="10.0" text="Text" />
      <padding>
         <Insets left="10.0" right="40.0" />
      </padding>
  </HBox>
   <HBox alignment="CENTER" spacing="30.0">
      <children>
        <ToggleButton fx:id="gameToggleButton" mnemonicParsing="false" text="Start" />
         <Button fx:id="resetButton" layoutX="240.0" layoutY="10.0" mnemonicParsing="false" text="Reset" />
      </children>
   </HBox>
   <padding>
      <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
   </padding>
</VBox>
